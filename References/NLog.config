<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <targets>
    <target xsi:type="OutputDebugString" name="ds" layout="${longdate} [${threadid}:${threadname}] ${level} ${callsite} ${message} ${exception:format=type,message,stacktrace:separator=|}"/>
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="ds" />
  </rules>
</nlog>
